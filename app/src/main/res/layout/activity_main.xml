<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#DDE2E4"
    >
    <ImageButton
        android:id="@+id/image_button_setting"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="20dp"
        android:text="Setting"
        android:layout_gravity="right"
        android:background="@drawable/ic_settings"
        />

    <TextView
        android:id="@+id/textview_current_exhange"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="Ваша сумма"
        android:textSize="30sp"
        android:layout_gravity="center"
        android:layout_marginBottom="200dp"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        >

        <EditText
            android:id="@+id/edit_text_summ"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:hint="Сумма"
            android:layout_gravity="center"
            android:numeric="decimal"
            />
        <TextView
            android:id="@+id/current_exhange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Курс Доллара"
            android:textSize="30sp"
            android:layout_marginLeft="20dp"
            />

    </LinearLayout>





    <Button
        android:id="@+id/button_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Рассчитать"
        android:layout_gravity="center"
        android:layout_marginTop="300dp"
        />

</FrameLayout>